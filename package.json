{
    "name": "template",
    "version": "1.0.0",
    "description": "Este é um template de portfólio profissional e responsivo, desenvolvido com HTML, CSS e JavaScript puro, otimizado para Cientistas de Dados. Ele inclui funcionalidades como efeito de digitação, navegação suave, animações de scroll e um sistema de tema claro/escuro (`all white` e `all black`).",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "format": "prettier --write .",
        "lint": "eslint . && stylelint '**/*.css'",
        "lint:fix": "eslint . --fix && stylelint '**/*.css' --fix",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Euuuller/Template.git"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Euuuller/Template/issues"
    },
    "homepage": "https://github.com/Euuuller/Template#readme",
    "devDependencies": {
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-promise": "^6.6.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.5",
        "prettier": "^3.6.2",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-standard": "^28.0.0",
        "vite": "^7.1.11"
    },
    "browserslist": [
        "> 0.5%",
        "last 2 versions",
        "not dead"
    ],
    "lint-staged": {
        "*.{js,css,md,html,json}": "prettier --write",
        "*.js": "eslint --cache --fix",
        "*.css": "stylelint --fix"
    }
}
